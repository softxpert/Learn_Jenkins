/**
 * Adds a boolean parameter
 *
 * @return array
 */
def getBucketParameter() {
    return [$class: 'BooleanParameterDefinition',
            description: """
<b>Add bucket to module configuration</b>
""" ,
            name: 'BUCKET'
    ]
}


/**
 * Get all parameters as array
 *
 * @return array
 */
def getParameters() {
    return [
        getBucketParameter()

    ]
}

node {

    properties([
        parameters(
            getParameters()
        )
    ])

    stage('build') {
        sh  'echo "Hello!"'
    }
}
